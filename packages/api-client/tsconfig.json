{
  "extends": "@c5/tsconfig/base.json",
  "compilerOptions": {
    // We have a lot of NestJS DTOs (data transfer objects) which are interfaces
    // expressed as ES6 classes so that it can be preserved at runtime for
    // NodeJS. See https://docs.nestjs.com/controllers#request-payloads.
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}
